{
	"compilerOptions": {
		"strict": true,

		"target": "ESNext",
		"module": "ESNext",
		"allowJs": true,
		"noEmit": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"jsx": "preserve",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": "./",
		"paths": {
			"src/*": ["src/*"],
			"test/*": ["test/*"]
		},
		"types": ["jest", "node"]
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.vue",
		"test/**/*.js",
		"test/**/*.ts"
	],
	"exclude": ["node_modules", "dist"]
}
